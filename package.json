{
  "name": "nfeh",
  "version": "1.0.0",
  "description": "Tiny GUI for feh",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "webpack --progress && electron .",
    "build": "cross-env NODE_ENV=production webpack --progress",
    "watch": "webpack --progress --watch"
  },
  "keywords": [
    "wallpaper",
    "electron"
  ],
  "author": "Fahad Hossain <8bit.demoncoder@gmail.com> (http://fahad.gq/)",
  "license": "MIT",
  "homepage": "https://github.com/fa7ad/nfeh#readme",
  "bugs": {
    "url": "https://github.com/fa7ad/nfeh/issues"
  },
  "dependencies": {
    "babel-polyfill": "^6.13.0",
    "mobx": "^2.5.1",
    "mobx-react": "^3.5.5",
    "react": "^15.3.1",
    "react-desktop": "^0.2.13",
    "react-dom": "^15.3.1",
    "react-icons": "^2.2.1"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "cross-env": "^2.0.1",
    "css-loader": "^0.25.0",
    "cssnano": "^3.7.4",
    "electron": "^1.3.5",
    "electron-builder": "^6.4.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "lodash": "^4.15.0",
    "node-sass": "^3.9.0",
    "postcss-loader": "^0.13.0",
    "sass-loader": "^4.0.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2"
  },
  "build": {
    "appId": "com.adkave.fahad.nfeh",
    "category": "public.app-category.utilities",
    "asar": true,
    "files": [
      "css${/*}",
      "js${/*}",
      "vendor${/*}",
      "index.html",
      "main.js",
      "package.json"
    ]
  }
}
