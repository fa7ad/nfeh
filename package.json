{
  "name": "nfeh",
  "version": "1.0.0",
  "description": "Tiny GUI for feh",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "prebuild": "rm -rfv dist && echo Cleaned old dist && npm run bundle:prod",
    "build": "build --linux pacman deb AppImage",
    "postbuild": "rename-files ./dist '.pacman' '.tar.xz'",
    "bundle": "webpack --progress",
    "bundle:run": "webpack --progress && npm start",
    "bundle:prod": "env NODE_ENV=production webpack --progress",
    "bundle:watch": "webpack --progress --watch",
    "test": "standard --parser babel-eslint src/**/*.js --verbose | snazzy"
  },
  "keywords": [
    "wallpaper",
    "electron"
  ],
  "author": "Fahad Hossain <8bit.demoncoder@gmail.com> (http://fahad.gq/)",
  "license": "MIT",
  "homepage": "https://github.com/fa7ad/nfeh#readme",
  "bugs": {
    "url": "https://github.com/fa7ad/nfeh/issues"
  },
  "dependencies": {
    "babel-polyfill": "^6.13.0",
    "classnames": "^2.2.5",
    "file-url": "^1.1.0",
    "glob": "^7.0.6",
    "image-size": "^0.5.0",
    "legit-image": "^0.1.4",
    "lodash": "^4.16.0",
    "mobx": "^2.5.1",
    "mobx-react": "^3.5.5",
    "react": "^15.3.1",
    "react-desktop": "^0.2.13",
    "react-dom": "^15.3.1",
    "react-dropdown": "^1.1.0",
    "react-icons": "^2.2.1",
    "shell-escape-tag": "^1.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "css-loader": "^0.25.0",
    "cssnano": "^3.7.4",
    "electron": "^1.3.5",
    "electron-builder": "^7.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "node-sass": "^3.9.0",
    "postcss-loader": "^0.13.0",
    "rename-files": "0.0.2",
    "sass-loader": "^4.0.1",
    "snazzy": "^5.0.0",
    "standard": "^8.1.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2"
  },
  "build": {
    "appId": "gq.fahad.nfeh",
    "category": "public.app-category.utilities",
    "asar": true,
    "license": "MIT",
    "files": [
      "css/**",
      "js/**",
      "lib/**",
      "index.html",
      "main.js",
      "package.json"
    ],
    "icon": "icon.icns",
    "directories": {
      "buildResources": "."
    },
    "linux": {
      "category": "Utility",
      "depends": [
        "feh",
        "bash"
      ],
      "target": "pacman",
      "desktop": {
        "Name": "nfeh",
        "Exec": "nfeh",
        "Icon": "nfeh",
        "Type": "Application",
        "Categories": "Utility;"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fa7ad/nfeh.git"
  }
}
